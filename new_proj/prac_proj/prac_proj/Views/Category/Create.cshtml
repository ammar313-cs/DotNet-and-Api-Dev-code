@model category
@{
    ViewData["Title"] = "Create";


}

<form method="post" asp-action="Create">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create category</h2>
            <hr />

        </div>
        <div asp-validation-summary="All"> </div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="from-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="DisplayOrder"></label>
            <input asp-for="DisplayOrder" class="from-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Create</button>
        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary" style="width:150px"> back to list</a>

    </div>
</form>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
