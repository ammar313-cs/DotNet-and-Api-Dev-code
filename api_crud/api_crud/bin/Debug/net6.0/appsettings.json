{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  "ControllerAccessConfig": {
    "ControllerRoles": {
      "Person": {
        "Admin": [ "Get", "GetById", "Put", "Delete" ],
        "SuperUser": [ "Get", "GetById" ],
        "User": [ "Get", "GetById" ]
      }
    }
  },

  "ValidationConfig": {
    "PersonModel": [
      {
        "PropertyName": "Name",
        "Required": true,
        "MaxLength": 50
      },
      {
        "PropertyName": "Address",
        "MaxLength": 80
      },
      {
        "PropertyName": "Phone",
        "RegularExpression": "^\\d{10}$",
        "RegexErrorMessage": "Phone number must be 10 digits."
      },
      {
        "PropertyName": "Email",
        "EmailAddress": true
      }
    ]
  }
}
